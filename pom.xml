  <artifactId>CATALOGO-SERVICE</artifactId>
  <build>
    <plugins>
      <!-- Plugin para configurar la compilación y especificar procesadores de anotación -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <annotationProcessorPaths>
            <path>
              <artifactId>therapi-runtime-javadoc-scribe</artifactId>
              <groupId>com.github.therapi</groupId>
              <version>0.15.0</version>
            </path>
            <path>
              <artifactId>lombok</artifactId>
              <groupId>org.projectlombok</groupId>
              <version>${lombok.version}</version>
            </path>
            <path>
              <artifactId>mapstruct-processor</artifactId>
              <groupId>org.mapstruct</groupId>
              <version>${mapstruct.version}</version>
            </path>
            <path>
              <artifactId>lombok-mapstruct-binding</artifactId>
              <groupId>org.projectlombok</groupId>
              <version>${lombok-mapstruct-binding.version}</version>
            </path>
          </annotationProcessorPaths>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>${maven-compiler-plugin.version}</version>
      </plugin>
      <!-- Plugin para generar referencias cruzadas de código fuente para documentación -->
      <plugin>
        <artifactId>maven-jxr-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>jxr</goal>
              <goal>test-jxr</goal>
            </goals>
            <id>cross-reference-source</id>
            <phase>pre-site</phase>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.3.1</version>
      </plugin>
      <!-- Plugin para ejecutar tests unitarios -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.2.2</version>
      </plugin>
      <!-- Plugin para ejecutar pruebas de integración y verificación -->
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.2.2</version>
      </plugin>
      <!-- Plugin para detectar bugs potenciales en el código usando SpotBugs -->
      <plugin>
        <artifactId>spotbugs-maven-plugin</artifactId>
        <configuration>
          <failOnError>false</failOnError>
          <includeTests>true</includeTests>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
            <id>verificar-bugs</id>
            <phase>verify</phase>
          </execution>
        </executions>
        <groupId>com.github.spotbugs</groupId>
        <version>4.8.1.0</version>
      </plugin>
      <!-- Plugin para generar documentación JavaDoc -->
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <nohelp>true</nohelp>
          <show>private</show>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.6.2</version>
      </plugin>
      <!-- Plugin para manejar releases y versionado -->
      <plugin>
        <artifactId>maven-release-plugin</artifactId>
        <configuration>
          <tagNameFormat>v@{project.version}</tagNameFormat>
        </configuration>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.0.1</version>
      </plugin>
      <!-- Plugin para ejecutar análisis de código estático usando PMD -->
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <excludes>
          </excludes>
          <failOnViolation>true</failOnViolation>
          <includeTests>true</includeTests>
          <rulesets>
      <!--<ruleset>http://10.1.22.164/analisis-codigo/analisis-codigo/-/raw/main/pmd-ruleset.xml
     </ruleset>-->
   </rulesets>
   <skipEmptyReport>false</skipEmptyReport>
   <verbose>true</verbose>
 </configuration>
 <executions>
   <execution>
     <configuration>
       <excludeFromFailureFile>
         ${project.parent.relativePath}/semop-monitoring-container/src/test/resources/aud-codigo/exclude-pmd.properties
       </excludeFromFailureFile>
     </configuration>
     <goals>
       <goal>check</goal>
     </goals>
     <id>check-pmd</id>
     <phase>verify</phase>
   </execution>
   <execution>
     <configuration>
       <excludeFromFailureFile>
         ${project.parent.relativePath}/semop-monitoring-container/src/test/resources/aud-codigo/exclude-pmd.properties
       </excludeFromFailureFile>
     </configuration>
     <goals>
       <goal>check</goal>
     </goals>
     <id>report-pmd</id>
     <phase>site</phase>
   </execution>
 </executions>
 <groupId>org.apache.maven.plugins</groupId>
 <version>${maven-pmd-plugin.version}</version>
</plugin>
